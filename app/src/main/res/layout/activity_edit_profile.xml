<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityClasses.EditProfile" android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="80"
    android:padding="10dp"
        >
        <ImageView
            android:id="@+id/backedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            />

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_weight="20"
            >
            <ImageView
                android:id="@+id/editimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:background="@drawable/chatbuttonbackground"
                android:backgroundTint="#F9DBE2"

                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:padding="5dp"
                android:elevation="-1dp"
                android:src="@drawable/user"
                android:layout_marginTop="20dp"
                android:layout_weight="4"
                android:layout_centerHorizontal="true"
                android:id="@+id/profilepicedit"
                />

        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE0000"
            android:layout_weight="5"
            android:hint="Blood group"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:textColorHint="#FE0000"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bloodgrouedit"
                android:layout_weight="5"
                android:inputType="text"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE0000"
            android:layout_weight="5"
            android:hint="Name"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:textColorHint="#FE0000"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameedit"
                android:layout_weight="5"
                android:inputType="text"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE0000"
            android:layout_weight="5"
            android:hint="Address"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:textColorHint="#FE0000"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:id="@+id/adressedit"
                android:inputType="text"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE0000"
            android:layout_weight="5"
            android:hint="Phone Number"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:textColorHint="#FE0000"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="text"
                android:id="@+id/phonenumberedit"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE0000"
            android:layout_weight="5"
            android:hint="Email"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:textColorHint="#FE0000"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:id="@+id/emailedit"
                android:inputType="text"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE0000"
            android:layout_weight="5"
            android:hint="your street number"
            android:fontFamily="serif"
            android:layout_margin="5dp"
            android:textColorHint="#FE0000"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="text"
                android:id="@+id/streetedit"
                android:textColor="@color/black"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bloodgroup1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="#FE0000"
            android:layout_weight="5"
            android:hint="Your gender"
            android:fontFamily="serif"
            android:layout_margin="10dp"
            android:textColorHint="#FE0000"
            >
            <AutoCompleteTextView
                android:id="@+id/AutoCompleteTextviewedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FE0000"
            android:layout_weight="10"
            android:fontFamily="serif"
            android:id="@+id/update"
            android:text="Update"
            android:textSize="30dp" />
    </LinearLayout>
</ScrollView>

